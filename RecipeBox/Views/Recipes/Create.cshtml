@{
  Layout = "_Layout";
}

@model RecipeBox.Models.Recipe

<h3>Add a New Recipe:</h3>
<hr>

@using (Html.BeginForm())
{
  <h4>@Html.LabelFor(model => model.Title)</h4>
  @Html.TextBoxFor(model=> model.Title, new { @class = "form-control", @required = "required" })
  <br>
  <h4>@Html.LabelFor(model => model.Instructions)</h4>
  @Html.TextAreaFor(model=> model.Instructions, new { @class = "form-control form-control-full", rows = 5 })
  <br>
  <h4>@Html.LabelFor(model => model.Ingredients)</h4>
  @Html.TextAreaFor(model=> model.Ingredients, new { @class = "form-control form-control-full", rows = 5 })
  <br>
  <h4>Total @Html.LabelFor(model => model.Time) in Minutes</h4>
  @Html.TextBoxFor(model => model.Time, new { @class = "form-control", @type = "number"})
  <br>
  <h4>@Html.LabelFor(model => model.Rating)</h4>
  @Html.DropDownList("Rating", new List<SelectListItem> {
    new SelectListItem { Text= "⭐", Value = "⭐" },
    new SelectListItem { Text= "⭐⭐", Value = "⭐⭐" },
    new SelectListItem { Text= "⭐⭐⭐", Value = "⭐⭐⭐" },
    new SelectListItem { Text= "⭐⭐⭐⭐", Value = "⭐⭐⭐⭐" },
    new SelectListItem { Text= "⭐⭐⭐⭐⭐", Value = "⭐⭐⭐⭐⭐" }
  }, new { @class = "form-control"})
  <br>
  <input type="submit" value="Add New Recipe" class="btn btn-light ButtonText"/>
}

<br>
<p class="btn btn-light">@Html.ActionLink("Show All Recipes", "Index", null, null, new { @class = "ButtonText" })</p>