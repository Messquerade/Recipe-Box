@{
  Layout = "_Layout";
}

@using RecipeBox.Models
@model IEnumerable<RecipeBox.Models.Recipe>

<h3>@User.Identity.Name's Recipes</h3>

@if (Model.Any())
{
  @foreach (Recipe recipe in Model)
  {
    <div class = "card-deck">
      <div class="card text-center mb-3" style="width: 24rem;">
        <div class="card-body">
        <h5 class="card-title">@Html.ActionLink($"{recipe.Title}", "Details", new { id = recipe.RecipeId})</h5>
          <p class="card-text">@recipe.Time</p>
            <div class="card-footer text-muted">
              Your Rating: @recipe.Rating
          </div>
        </div>
      </div>
    </div>
  }
}
else
{
  <p>You have no recipes yet.</p>
}

<p class="btn btn-dark">@Html.ActionLink("Add a Recipe", "Create", null, null, new { @class="ButtonText"})</p>