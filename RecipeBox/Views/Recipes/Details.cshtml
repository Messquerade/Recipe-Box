@{
  Layout = "_Layout";
}

@model RecipeBox.Models.Recipe

<h2>@Model.Title</h2>
<hr>

<h4>Rating: @Model.Rating</h4>
<h5><em>Total Time: @Model.Time minutes</em></h5>

<h3>Ingredients</h3>
<p>@Model.Ingredients</p>

<h3>Instructions</h3>
<p>@Model.Instructions</p>

@if(@Model.JoinEntities.Count == 0)
{
  <p>This recipe has no tags.</p>
}
else
{
  <h3>Tags:</h3>

    @foreach(var join in Model.JoinEntities)
    {
      <div class = "card-deck">
        <div class="card text-center mb-3" style="width: 24rem;">
          <div class="card-body">
            <h5 class="card-title">@join.Tag.TagName</h5>
            @using (Html.BeginForm("DeleteTag", "Recipes"))
            {
              @Html.Hidden("joinId", @join.RecipeTagId)
              <input type="submit" value="Delete" class="btn btn-dark"/>
            }
          </div>
        </div>
      </div>
    }
}

<p class="btn btn-dark">@Html.ActionLink("Edit this Recipe", "Edit", new { id = Model.RecipeId }, new { @class = "ButtonText" })</p>
<p class="btn btn-dark">@Html.ActionLink("Delete this Recipe", "Delete", new { id = Model.RecipeId}, new { @class = "ButtonText"})</p>
<p class="btn btn-dark">@Html.ActionLink("Add a Tag to this Recipe", "AddTag", new {id = Model.RecipeId}, new { @class = "ButtonText"})</p>

