@{
  Layout = "_Layout";
}

@using RecipeBox.Models;

<h2>All Tags</h2>

@if (Model.Count == 0)
{
  <h3>You have no tags yet.</h3>
}

@foreach(Tag tag in Model)
{
  @if(!tag.TagName.Contains("#"))
  {
    <p>#@Html.ActionLink($"{tag.TagName}", "Details", new { id = tag.TagId })</p>
  }
  else
  {
    <p>@Html.ActionLink($"{tag.TagName}", "Details", new { id = tag.TagId })</p>
  }
}


<p class="btn btn-dark">@Html.ActionLink("Create a Tag", "Create", null, null, new { @class = "ButtonText"})</p>