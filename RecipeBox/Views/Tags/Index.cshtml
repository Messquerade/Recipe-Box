@{
  Layout = "_Layout";
}

@using RecipeBox.Models;

<h2>All Tags</h2>

@if (Model.Count == 0)
{
  <h3>You have no tags yet.</h3>
}

<ul>
  @foreach(Tag tag in Model)
  {
    <li>@Html.ActionLink($"{tag.TagName}", "Details", new { id = tag.TagId })</li>
  }
</ul>

<p class="btn btn-dark">@Html.ActionLink("Create a Tag", "Create", null, new { @class = "ButtonText"})</p>