@{
  Layout = "_Layout";
}

@model RecipeBox.Models.Tag

<h3>Tag Details</h3>

<h4>Recipes for @Model.TagName</h4>
<hr>
<div class ="tags">
@if(@Model.JoinEntities.Count == 0)
{
  <p>This tag has no connected recipes.</p>
}
else
{
    @foreach(var join in Model.JoinEntities)
    {
      <h4>@Html.ActionLink($"{join.Recipe.Title}", "Details", "Recipes", new { id = join.Recipe.RecipeId}, new { @class = "HeaderText" })</h4>
    }
}
</div>
<br>
<p class="btn btn-light">@Html.ActionLink("Edit Tag", "Edit", new { id = Model.TagId}, new { @class = "ButtonText"})</p>
<p class="btn btn-light">@Html.ActionLink("Delete Tag", "Delete", new { id = Model.TagId}, new { @class = "ButtonText"})</p>